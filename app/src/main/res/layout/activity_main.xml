<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/catppuccin_mocha_lavender"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tittel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:shadowColor="@color/catppuccin_frappe_crust"
            android:shadowRadius="20"
            android:text="@string/main_title"
            android:textAlignment="center"
            android:textColor="@color/catppuccin_frappe_maroon"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:id="@+id/btnGalleri"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/btnGalleri" />

        <Button
            android:id="@+id/btnStartQuiz"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/btn_start_Quiz" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>